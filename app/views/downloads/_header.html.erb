<header class="customer-header">
  <div class="brand-logo">
    <img src="<%= root_url %><%= image_path @project.logo %>" />
    <%= raise "#{root_url}#{image_path @project.logo}".to_yaml %>
  </div>

  <ul class="brand-contact-details">
    <li>
      <div class="brand-contact-type">A:</div>

      <strong class="accent">
        <%= project.business_address.single_line if project.business_address.present? %>
      </strong>
    </li>
    <li>
      <div class="brand-contact-type">T:</div>
      <strong class="accent"><%= project.brand.telephone %></strong>
    </li>
    <li>
      <div class="brand-contact-type">E:</div>
      <strong class="accent"><%= project.brand.email %></strong>
    </li>
    <li>
      <div class="brand-contact-type">W:</div>
      <strong class="accent"><%= project.brand.website %></strong>
    </li>
  </ul>

</header>
