<div class="content">
  <div class="index">
    <h1>Envisage Unpaid Invoices</h1>
    <%= render "envisage/invoices/navigation" %>
    <div class="invoice-header">
      <div class="download">
        &nbsp;
      </div>
      <div class="number">
        Number
      </div>
      <div class="customer-and-project">
        Customer &amp; Project
      </div>
      <div class="name">
        Name
      </div>
      <div class="percentage">
        Percentage
      </div>
      <div class="amount">
        Total
      </div>
      <div class="vat">
        VAT (20%)
      </div>
      <div class="total">
        Total inc VAT
      </div>
      <div class="pay-info">
        Paid
      </div>
    </div>

